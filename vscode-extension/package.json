{
  "name": "llm-kanban",
  "displayName": "LLM Kanban",
  "description": "File-based Kanban board for managing LLM-assisted development workflows with agent and context integration",
  "version": "0.1.0",
  "publisher": "your-name-or-org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/llm-kanban"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/src/extension.js",
  "activationEvents": [
    "onView:llmKanban.treeView",
    "onCommand:llmKanban.openBoard",
    "onCommand:llmKanban.openSettings",
    "onCommand:llmKanban.initializeWorkspace"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "llm-kanban",
          "title": "LLM Kanban",
          "icon": "resources/kanban-icon.svg"
        }
      ]
    },
    "views": {
      "llm-kanban": [
        {
          "id": "llmKanban.treeView",
          "name": "LLM Kanban"
        }
      ]
    },
    "commands": [
      {
        "command": "llmKanban.openBoard",
        "title": "LLM Kanban: Open Kanban Board",
        "icon": "$(graph)"
      },
      {
        "command": "llmKanban.initializeWorkspace",
        "title": "LLM Kanban: Initialize Workspace",
        "icon": "$(folder)"
      },
      {
        "command": "llmKanban.createTask",
        "title": "LLM Kanban: Create Task",
        "icon": "$(add)"
      },
      {
        "command": "llmKanban.createPhase",
        "title": "LLM Kanban: Create Phase",
        "icon": "$(package)"
      },
      {
        "command": "llmKanban.moveTask",
        "title": "LLM Kanban: Move Task",
        "icon": "$(arrow-right)"
      },
      {
        "command": "llmKanban.copyWithContext",
        "title": "LLM Kanban: Copy with Context",
        "icon": "$(copy)"
      },
      {
        "command": "llmKanban.deleteItem",
        "title": "LLM Kanban: Delete Item",
        "icon": "$(trash)"
      },
      {
        "command": "llmKanban.refreshSidebar",
        "title": "LLM Kanban: Refresh Sidebar",
        "icon": "$(refresh)"
      },
      {
        "command": "llmKanban.openSettings",
        "title": "LLM Kanban: Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "llmKanban.initializeWorkspace",
        "title": "LLM Kanban: Initialize Workspace",
        "icon": "$(workspace-trust)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "llmKanban.openBoard"
        },
        {
          "command": "llmKanban.initializeWorkspace"
        },
        {
          "command": "llmKanban.createTask"
        },
        {
          "command": "llmKanban.createPhase"
        },
        {
          "command": "llmKanban.moveTask"
        },
        {
          "command": "llmKanban.copyWithContext"
        },
        {
          "command": "llmKanban.deleteItem"
        },
        {
          "command": "llmKanban.refreshSidebar"
        }
      ],
      "view/item/context": [
        {
          "command": "llmKanban.moveTask",
          "when": "view == llmKanban.treeView && viewItem == kanbanItem",
          "group": "1_modification@1"
        },
        {
          "command": "llmKanban.copyWithContext",
          "when": "view == llmKanban.treeView && viewItem == kanbanItem",
          "group": "1_modification@2"
        },
        {
          "command": "llmKanban.deleteItem",
          "when": "view == llmKanban.treeView && viewItem == kanbanItem",
          "group": "2_danger@1"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./tsconfig.json && webpack --mode production",
    "watch": "tsc -watch -p ./tsconfig.json & webpack --watch --mode development",
    "webpack": "webpack --mode development",
    "webpack:watch": "webpack --watch --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "vscode:prepublish": "bun run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.90.0",
    "css-loader": "^7.1.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.7.0",
    "gray-matter": "^4.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  }
}
