{
  "name": "llm-kanban",
  "displayName": "LLM Kanban",
  "description": "File-based Kanban board for managing LLM-assisted development workflows",
  "version": "0.0.1",
  "publisher": "your-name-or-org",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:llmKanban.treeView",
    "onCommand:llmKanban.openBoard",
    "onCommand:llmKanban.openSettings",
    "onCommand:llmKanban.initializeWorkspace"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "llm-kanban",
          "title": "LLM Kanban",
          "icon": "resources/kanban-icon.svg"
        }
      ]
    },
    "views": {
      "llm-kanban": [
        {
          "id": "llmKanban.treeView",
          "name": "LLM Kanban"
        }
      ]
    },
    "commands": [
      {
        "command": "llmKanban.openBoard",
        "title": "LLM Kanban: Open Kanban Board",
        "icon": "$(graph)"
      },
      {
        "command": "llmKanban.openSettings",
        "title": "LLM Kanban: Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "llmKanban.initializeWorkspace",
        "title": "LLM Kanban: Initialize Workspace",
        "icon": "$(workspace-trust)"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "vscode:prepublish": "bun run compile"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.90.0",
    "eslint": "^9.39.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "zod": "^3.23.8"
  }
}
