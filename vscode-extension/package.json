{
  "name": "kanbanllm",
  "displayName": "LLM Kanban",
  "description": "File-based Kanban board for managing LLM-assisted development tasks",
  "version": "0.1.0",
  "publisher": "your-name-or-org",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Project Management"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:.llmkanban",
    "onCommand:llmkanban.init"
  ],
  "contributes": {
    "commands": [
      {
        "command": "llmkanban.init",
        "title": "LLM Kanban: Initialize Workspace"
      },
      {
        "command": "llmkanban.refreshBoard",
        "title": "LLM Kanban: Refresh Board",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "llmkanban",
          "title": "LLM Kanban",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "llmkanban": [
        {
          "id": "llmkanban.treeView",
          "name": "Tasks"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "llmkanban.refreshBoard",
          "when": "view == llmkanban.treeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "lint": "eslint src --ext .ts",
    "vscode:prepublish": "bun run compile"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.90.0",
    "eslint": "^9.39.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "zod": "^4.1.12"
  }
}
