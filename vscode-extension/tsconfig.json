{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["vscode", "node"],
    "skipLibCheck": true
  },
  "include": ["src", "../src/core"],
  "exclude": ["../ src/core/__tests__", "**/*.test.ts", "**/*.spec.ts"]
}
