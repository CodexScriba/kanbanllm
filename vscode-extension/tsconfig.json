{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "out/src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["vscode", "node", "jest"],
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": ["src", "../src/core", "webview-src"],
  "exclude": ["../src/core/__tests__", "**/*.test.ts", "**/*.spec.ts", "node_modules"]
}
